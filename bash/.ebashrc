#!/bin/bash

#* Get aliases, functions, and other programs. *
if [ -f $HOME/.{aliases,bashrc} ]; then
	. ~/.{aliases,bashrc}
fi

#* Bash functions. *#
HISTSIZE=100000
HISTFILESIZE=1000000
LANG=en_US.UTF-8
LC_COLLATE=C

# PATH variables.
PATH="/bin:/usr/bin:/sbin:/usr/sbin:/usr/local/bin:/usr/local/sbin:/etc/:/usr/local/etc:/home/$USER:$PATH"

# Apps.
export EDITOR="/usr/bin/nvim-linux64/bin/nvim"

# Bash prompt.
PS4=""
