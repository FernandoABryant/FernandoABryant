# Title: Bash script configuration file.
# Date: 09/27/2022
#!/bin/bash

#* Get aliases, functions, and other programs. *
if [ -f $HOME/.{aliases,bashrc} ]; then
	. ~/.{aliases,bashrc}
fi

#* Bash functions. *#
HISTSIZE=100000
HISTFILESIZE=1000000
LANG="en_US.UTF-8"
LC_ALL="C"


#* File Security. *#
umask 022

#* PATH variables. *#
PATH="/bin:/usr/bin:/sbin:/usr/sbin:/usr/local/bin:/usr/local/sbin:/etc/:/usr/local/etc:/home/$USER:/home/bin:$HOME/.local/bin:$PATH"
export PATH

#* Apps. *#
export EDITOR="/usr/bin/nvim-linux64/bin/nvim"

#* Bash prompt. *#
PS4=" "
